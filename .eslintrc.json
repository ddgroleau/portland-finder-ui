{
  "root": true,
  "extends": ["next/core-web-vitals"],
  "plugins": ["testing-library"],
  "rules": {
    "indent": ["error", 4],
    "max-len": ["warn", 120],
    "semi": ["error", "always"],
    "no-undef": "error"
  },
  "overrides": [
    // Only uses Testing Library lint rules in test files
    {
      "files": [
        "**/__tests__/**/*.[jt]s?(x)",
        "**/?(*.)+(spec|test).[jt]s?(x)"
      ],
      "extends": ["plugin:testing-library/react"],
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
